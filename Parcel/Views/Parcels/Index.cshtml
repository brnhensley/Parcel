@using Delivery.Models;

<h1>Package List</h1>
<ul>

@if (Model.Count == 0)
{
 <p>You have no packages</p>
}
@if(Model.Count != 0)
{
 @foreach (Parcel parcel in Model)
 {
   <li>@parcel.GetDescription(), @parcel.GetVolume() cubic cm, $@parcel.CostToShip()</li>
 }
}

</ul>
<a href="/parcels/new">Add another package.</a>
